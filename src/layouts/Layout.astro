---
import Navbar from '../components/Navbar.tsx';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import '../styles/navbar.css';
import '../styles/footer.css';
const { title = 'KBMV', snap = false } = Astro.props;
---
<!DOCTYPE html>
<html lang="no">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@500;600;700&display=swap"
      rel="stylesheet"
    />
    <slot name="head" />
  </head>
  <body>
    <Navbar client:load />
    <main class={snap ? 'home-snap' : undefined}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
