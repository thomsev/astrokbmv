---
import { events as eventsData } from '../data/events';
const { events } = Astro.props as { events: typeof eventsData };
---
<div class="events">
  {events.map((event) => (
    <div class="event-row">
      <div class="event-date">{event.date}</div>
      <div>
        <div class="event-title">{event.title}</div>
        <div class="event-location">{event.location}</div>
      </div>
      <span class={`badge ${event.status === 'full' ? 'full' : 'available'}`}>
        {event.status === 'full' ? 'Fullt' : 'Ledig'}
      </span>
      <span class="event-location">OppmÃ¸te</span>
    </div>
  ))}
</div>
